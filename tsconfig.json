{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "mongoose-geojson-schemas": ["./typings/mongoose-geojson-schemas"]
    },

    "typeRoots": ["./node_modules/@types", "./typings"],
    "esModuleInterop": true
  },
  "include": ["seed"],
  "exclude": ["node_modules"]
}
