{
  "compilerOptions": {
    "lib": ["es7", "es6"],
    "target": "es6",
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports" : true,
    "moduleResolution": "node",
    "outDir": "./dist",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "baseUrl": ".",
    "noImplicitAny": true,
    "paths": {
      "*": [
        "*",
      ],
      "mongoose-geojson-schemas": ["./typings/mongoose-geojson-schemas"],
      "json": ["./typings/json"]
    },
    "typeRoots": ["./node_modules/@types", "./typings"]
  },
  "include": ["seed", "src/**/*"],
  "exclude": ["node_modules"]
}
